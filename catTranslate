<body>

    <div class="container">
        <h1>Cat Translator</h1>
        <p>Type a sentence and let the cats speak for you!</p>
        
        <input type="text" id="userInput" placeholder="Type your sentence here...">
        <button onclick="translateToCat()">Translate to Cat</button>

        <div id="result"></div>
    </div>

    <script>
        function translateToCat() {
            const userInput = document.getElementById('userInput').value;
            if (!userInput) {
                document.getElementById('result').textContent = "Please type something for the cat to translate!";
                return;
            }
            
            const catPhrases = [
                "Meow meow, purrrr!", 
                "Hissss, I demand tuna!", 
                "Mew mew, feed me now!", 
                "Mrrrow, what's that noise?", 
                "Purr... I like it.", 
                "Meowww, give me belly rubs!",
                "Mrrrrrr... don't touch my tail!", 
                "Hisss... I'm grumpy today.", 
                "Prrrrrrr, I'm the king of this house!",
                "Mew! Where's my toy mouse?"
            ];
            
            const randomCatPhrase = catPhrases[Math.floor(Math.random() * catPhrases.length)];

            document.getElementById('result').textContent = `Cat Translation: "${randomCatPhrase}"`;
        }
    </script>
</body>
